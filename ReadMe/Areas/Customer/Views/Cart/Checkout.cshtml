@model CheckoutViewModel



<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="mb-4 text-center">Checkout</h2>
            
            <div class="card p-4 mb-4">
                <h4 class="card-header">Customer Information</h4>
                <div class="card-body">
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Name:</strong> @Model.Name</p>
                    <p><strong>Address:</strong> @Model.StreetAddress, @Model.City, @Model.State, @Model.PostalCode</p>
                </div>
            </div>
            
            <div class="card p-4 mb-4">
                <h4 class="card-header">Order Summary</h4>
                <div class="card-body">
                    <p><strong>Total Amount:</strong> $@Model.TotalPrice</p>
                </div>
            </div>
            
            <div class="text-center">
                <form asp-action="InitiateKhaltiPayment" method="post">
                    <input type="hidden" name="totalPrice" value="@Model.TotalPrice" />
                    <button type="submit" class="btn btn-primary">Pay with Khalti</button>
                </form>
            </div>
        </div>
    </div>
</div>



