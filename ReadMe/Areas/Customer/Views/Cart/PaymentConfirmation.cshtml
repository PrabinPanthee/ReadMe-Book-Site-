@model PaymentConfirmationViewModel

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card p-5 text-center shadow-lg">
        <div class="card-body">
            <!-- Green checkmark icon -->
            <div class="text-success mb-4">
                <i class="fas fa-check-circle fa-5x"></i>
            </div>

            <!-- Payment success message -->
            <h1 class="display-4 text-success">Payment Successful!</h1>

            <p class="mt-3">Thank you for your payment.</p>

            <!-- Transaction details (optional) -->
            <div class="mt-4">
                <p><strong>Transaction ID:</strong> @Model.TransactionId</p>
                <p><strong>Order ID:</strong> @Model.PurchaseOrderId</p>
                <p><strong>Total Amount:</strong> Rs. @Model.TotalAmountInRupees</p>
            </div>

            <!-- Button to return to the home page or continue shopping -->
            <a href="/" class="btn btn-success btn-lg mt-4">Return to Home</a>
        </div>
    </div>
</div>

