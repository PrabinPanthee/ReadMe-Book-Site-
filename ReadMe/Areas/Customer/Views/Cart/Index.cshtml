@model Cart

<div class="container mt-5">
    

    @if (Model == null || Model.CartItems == null || !Model.CartItems.Any())
    {
        <div class="text-center">
            <div class="alert alert-info" role="alert">
                <i class="bi bi-cart-x" style="font-size: 2rem;"></i>
                <h4 class="mt-3">Your cart is empty</h4>
                <p class="mb-4">Looks like you haven't added anything to your cart yet.</p>
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                    Continue Shopping
                </a>
            </div>
        </div>
    }
    else
    {
        
        <div class="row">
            <div class="col-12">
                <table class="table table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col" class="text-center">Quantity</th>
                            <th scope="col" class="text-center">Price</th>
                            <th scope="col" class="text-center">Subtotal</th>
                            <th scope="col" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@item.Product.ImageUrl" alt="@item.Product.Title" class="img-thumbnail me-3" style="width: 100px; height: auto;">
                                        <div>
                                            <h5>@item.Product.Title</h5>
                                            <p class="mb-0">@Html.Raw(item.Product.Description)</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center align-middle">
                                    <form asp-action="Update" method="post">
                                        <input type="hidden" name="cartItemId" value="@item.Id" />
                                        <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control text-center" style="width: 70px; display: inline-block;" />
                                        <button type="submit" class="btn btn-primary btn-sm mt-2">Update</button>
                                    </form>
                                </td>
                                <td class="text-center align-middle">$@item.Product.ListPrice</td>
                                <td class="text-center align-middle">$@(item.Quantity * item.Product.ListPrice)</td>
                                <td class="text-end align-middle">
                                    <form asp-action="Remove" method="post">
                                        <input type="hidden" name="cartItemId" value="@item.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-6">
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Continue Shopping</a>
            </div>
            <div class="col-md-6 text-end">
                @{
                    var totalPrice = Model.CartItems.Sum(item => item.Quantity * item.Product.ListPrice);
                }
                <h4>Total: $@totalPrice</h4>
                <a asp-area="Customer" asp-controller="Cart" asp-action="Checkout" asp-route-totalPrice="@totalPrice" class="btn btn-success">Proceed to Checkout</a>
            </div>
        </div>
    }
</div>